<div class="modal fade" id="emailModal" tabindex="-1" role="dialog" aria-labelledby="emailModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Send Email</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form novalidate>
                    <div class="form-group">
                        <label for="WatcherInputEmail">Email address</label>
                        <input type="email" class="form-control" id="WatcherInputEmail1" placeholder="Enter email"
                               required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <a id="emailModalSendButton" href="/watcher/email/1" class="btn btn-default">
                    <input type="submit" class="btn" value="Visit Google"/>
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    function showModal(data) {
        $("#emailModalSendButton").attr("href", "/watcher/email/" + data);
        $("#emailModal").modal();
    }
</script>

